# Etapa de build
FROM node:20-alpine AS build

WORKDIR /app

# Copia tudo do frontend (context: raiz do projeto)
COPY . /app

# Instala dependências
RUN npm install

# Cria build
RUN npm run build

# Etapa de produção (Nginx)
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
